<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="luhnvalidator.luhnvalidator.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="introTextLabel" alignment="CENTER" text="The Luhn algorithm, or Mod 10 algorithm, is a checksum formula used &#10;to validate, inter alia, credit card numbers and phone identification numbers. &#10;Enter the number to be validated in the field below. " textAlignment="CENTER">
      <font>
         <Font name="Times New Roman" size="15.0" />
      </font></Label>

    <TextField fx:id="numberValidationTextField" alignment="CENTER" promptText="Enter number" />

    <Button fx:id="validationButton" onAction="#runValidation" text="Validate Number">
      <font>
         <Font name="Times New Roman" size="12.0" />
      </font></Button>

    <Label fx:id="resultLabel" style="-fx-text-fill: green;" textAlignment="JUSTIFY">
      <font>
         <Font name="Times New Roman Bold" size="13.0" />
      </font></Label>

</VBox>
